{
    "version": "0.2.0",
    "configurations": [
        {
          "type": "node",
          "request": "launch",
          "name": "Launch Program",
          "preLaunchTask": "tsc",
          "skipFiles": [
              "<node_internals>/**"
          ],
          "program": "${workspaceFolder}/src/server.ts",
          "smartStep": true,
          "outFiles": [
            "${workspaceFolder}/dist/**/*.js"
          ]
        }
    ]
}